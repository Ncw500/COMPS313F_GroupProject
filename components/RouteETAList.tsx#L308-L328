// 修正 TimeRemaining 组件中参数传递和依赖项
const TimeRemaining = ({ eta }: TimeRemainingProps) => {
  const { t, currentLanguage } = useTranslation(); // 确保获取到最新的翻译函数
  const [remaining, setRemaining] = useState('');

  useEffect(() => {
    const updateRemaining = () => {
      const newRemaining = calculateTimeRemaining(eta, t);
      setRemaining(newRemaining);
    };
    
    updateRemaining(); // 初始化时立即计算
    const interval = setInterval(updateRemaining, 60000);
    
    return () => clearInterval(interval);
  }, [eta, t, currentLanguage]); // 添加 currentLanguage 监听语言变化

  // ... existing rendering code ...
};